<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.punjabguide.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chandigarh"
                style="@style/main_headings"
                android:text="@string/city1"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/amritsar"
                style="@style/main_headings"
                android:text="@string/city2"
                android:textColor="@color/text_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/patiala"
                style="@style/main_headings"
                android:text="@string/city3"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/jalandhar"
                style="@style/main_headings"
                android:text="@string/city4"
                android:textColor="@color/text_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
